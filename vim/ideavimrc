set hlsearch
set incsearch
set ignorecase
set smartcase

let mapleader = ","
set tm=2000
set clipboard=unnamedplus

noremap ,, ,
nmap <silent> <leader>v :noh<CR>
nmap <silent> <leader>q :action CloseEditor<CR>
nmap <silent> <leader><Tab> :action NextTab<CR>
nmap <silent> <leader>gb :action Annotate<CR>
nmap <silent> <leader>gs :action ChangesView.Commit<CR>
nmap <silent> <leader>gp :action Vcs.Push<CR>

" ScrollFromSource plugin required
nmap <silent> <leader>ss :action ScrollFromSource<CR>
